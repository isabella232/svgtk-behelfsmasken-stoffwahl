        script(src='https://kit.fontawesome.com/5723931a0c.js', crossorigin="anonymous")

        body
        header.uk-navbar-container.uk-background-primary
            nav(uk-navbar)
                .uk-navbar-left
                    div.uk-navbar-item.uk-logo
                        img(src='/img/logo.svg' width=130)
                    ul.uk-navbar-nav
                        li(class=(active==='start'?'uk-active':''))
                            a(href='/') Start
                        li(class=(active==='impressum'?'uk-active':''))
                            a(href='/impressum') Impressum
                        li(class=(active==='datenschutz'?'uk-active':''))
                            a(href='/datenschutz') Datenschutz
                .uk-navbar-right
                    ul.uk-icon-nav.uk-navbar-nav
                        li
                            a(href='https://www.instagram.com/stueckvomgluecktextilkunst' target='_blank' rel='noopener')
                                i.fab.fa-instagram
                        li
                            a(href='https://de-de.facebook.com/stueckvomgluecktextilkunst/' target='_blank' rel='noopener')
                                i.fab.fa-facebook
